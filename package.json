{
  "name": "react-win-pivot",
  "version": "1.1.1",
  "description": "An attempt to recreate the Pivot element from WinJS in React.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:nozzlegear/react-win-pivot.git",
  "author": "Joshua Harms <joshua@nozzlegear.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run validate && yarn run build:ts && yarn run build:css",
    "build:css": "stylus -c --include-css -o ./dist ./css/all.styl",
    "build:ts": "esbuild --outdir=dist --sourcemap index.tsx && tsc --emitDeclarationOnly",
    "test": "yarn build && yarn esbuild --bundle --serve=localhost:5000 --servedir=. tests/test.tsx",
    "validate": "tsc -p . --skipLibCheck --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-motion": "^0.5.2",
    "react-motion-ui-pack": "^0.10.3"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-motion-ui-pack": "github:nozzlegear/react-motion-ui-pack.d.ts",
    "autoprefixer-stylus": "^1.0.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.23",
    "react-dom": "^17.0.2",
    "stylus": "^0.56.0",
    "typescript": "^4.5.5"
  }
}
