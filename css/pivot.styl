.pivot-tabs {
    .pivot-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 0;

        .pivot-header-title {
            padding: 0;
            margin: 0;
            font-family: inherit;
            line-height: 1;
        }

        .pivot-header-actions {
            a, button {
                margin-right: 10px;

                &:last-child {
                    margin-right: 0;
                }
            }
        }
    }

    .pivot-tabs-container {
        display:flex;
        flex-direction: row;
        align-content:center;
        clear:both;
        overflow-x:auto;
        
        div.pivot-tab {
            padding: 10px 20px;
            
            button {
                background:none;
                font-size:24px;
                font-family: inherit;
                padding:0;
                margin:0;
                color: rgba(0,0,0,.6);
                border:none;
                box-shadow:none;
                cursor: pointer;
            }
            
            &.active {
                button {
                    color:#000;
                }
            }
            
            &:first-child {
                padding-left:0;
            }
        }    
    }

    hr.pivot-spacer {
        width: 100%;
        border: 0;
        border-bottom: 1px solid #ccc;
        margin: 10px auto;
    }
}