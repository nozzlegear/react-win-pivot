.pivot-tabs {
    .pivot-tabs-container {
        display:flex;
        flex-direction: row;
        align-content:center;
        clear:both;
        margin: 0 auto 10px;
        border-bottom: 1px solid #ccc;
        border-top: 1px solid #ccc;
        padding: 15px 0 15px 0;
        overflow-x:auto;
        
        div.pivot-tab {
            padding: 10px 20px;
            
            button {
                background:none;
                font-size:24px;
                padding:0;
                margin:0;
                color: rgba(0,0,0,.6);
                border:none;
                box-shadow:none;
                cursor: pointer;
            }
            
            &.active {
                button {
                    color:#000;
                }
            }
            
            &:first-child {
                padding-left:0;
            }
        }    
    }
}